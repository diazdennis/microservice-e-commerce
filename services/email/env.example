# Email Service Environment Configuration
# Copy this file to .env and update values

APP_ENV=local
APP_KEY=
APP_DEBUG=true

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=email_db
DB_USERNAME=root
DB_PASSWORD=

# For Docker/Production use:
# DB_HOST=mysql
# DB_USERNAME=appuser
# DB_PASSWORD=your_app_user_password_here

# Email Configuration - Local Development (Mailtrap)
MAIL_MAILER=smtp
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mailtrap_username
MAIL_PASSWORD=your_mailtrap_password
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="E-Commerce Store"

# Email Configuration - Production (AWS SES)
# MAIL_MAILER=smtp
# MAIL_HOST=email-smtp.us-east-1.amazonaws.com
# MAIL_PORT=587
# MAIL_USERNAME=your_ses_smtp_username
# MAIL_PASSWORD=your_ses_smtp_password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS=your_verified_email@example.com
# MAIL_FROM_NAME="E-Commerce Store"

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost

