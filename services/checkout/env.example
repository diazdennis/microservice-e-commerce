# Checkout Service Environment Configuration
# Copy this file to .env and update values

APP_ENV=local
APP_KEY=
APP_DEBUG=true

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=checkout_db
DB_USERNAME=root
DB_PASSWORD=

# For Docker/Production use:
# DB_HOST=mysql
# DB_USERNAME=appuser
# DB_PASSWORD=your_app_user_password_here

# Service URLs (for inter-service communication)
# Local development:
CATALOG_SERVICE_URL=http://localhost:8001
EMAIL_SERVICE_URL=http://localhost:8003

# Docker/Production (used by CloudFormation):
# CATALOG_SERVICE_URL=http://catalog:8000
# EMAIL_SERVICE_URL=http://email:8000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost

# Production settings (used by CloudFormation):
# APP_ENV=production
# APP_DEBUG=false
# DB_HOST=mysql
# DB_USERNAME=appuser
# DB_PASSWORD=${MySQLAppPassword}
# CATALOG_SERVICE_URL=http://catalog:8000
# EMAIL_SERVICE_URL=http://email:8000
# CORS_ALLOWED_ORIGINS=*
