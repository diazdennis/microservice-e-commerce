# Catalog Service Environment Configuration
# Copy this file to .env and update values

APP_ENV=local
APP_KEY=
APP_DEBUG=true

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=catalog_db
DB_USERNAME=root
DB_PASSWORD=

# For Docker/Production use:
# DB_HOST=mysql
# DB_USERNAME=appuser
# DB_PASSWORD=your_app_user_password_here

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost

# Production settings (used by CloudFormation):
# APP_ENV=production
# APP_DEBUG=false
# DB_HOST=mysql
# DB_USERNAME=appuser
# DB_PASSWORD=${MySQLAppPassword}
# CORS_ALLOWED_ORIGINS=*
